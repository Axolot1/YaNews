<?xml version="1.0" encoding="utf-8"?>
<com.axolotl.yanews.customize.ScrollChildSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <com.axolotl.yanews.customize.EmptyRecyclerView
            android:id="@+id/rcv_news_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray1"
            tools:listitem="@layout/comment_layout" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/no_comments"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </FrameLayout>

</com.axolotl.yanews.customize.ScrollChildSwipeRefreshLayout>


